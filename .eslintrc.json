{
  "env": {
    "browser": false,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2021
  },
  "rules": {
    "prefer-const": "warn",
    "semi": ["error", "always"],
    "no-undef": "error",
    "comma-dangle": ["warn", {
      "arrays": "always-multiline",
      "objects": "always-multiline"
    }]
  }
}